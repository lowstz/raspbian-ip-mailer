### BEGIN INIT INFO
# Provides:          ip-mailler
# Required-Start:    $all
# Required-Stop:     
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Mail ip to me
### END INIT INFO

. /lib/lsb/init-functions

MAILER=/usr/local/bin/server-ip-mailer.py

case "$1" in
    start)
        log_action_msg "Sending ip mail ..."
        $MAILER &
        ;;
    *)
        echo "Usage: $0 {start}"
        exit 2
    ;;
esac
